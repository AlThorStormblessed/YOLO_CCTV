# Docker Hub username - Replace with your Docker Hub username
DOCKER_USERNAME=yourusername

# RTSP URLs (comma-separated) - Replace with your RTSP camera streams
RTSP_URLS=rtsp://admin123:admin123@103.100.219.14:8555/11

# Model path - Path to your trained YOLO model
MODEL_PATH=./runs/detect/train3/weights/best.pt

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Uncomment and set if your Redis requires authentication

# PostgreSQL configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=face_recognition

# Queue size limits
MAX_FRAMES_QUEUE_SIZE=100  # Maximum number of frames to keep in queue
MAX_FACES_QUEUE_SIZE=200  # Maximum number of faces to keep in queue
MAX_RECOGNITION_QUEUE_SIZE=200  # Maximum number of recognition tasks to keep in queue
MAX_RESULTS_STORE_SIZE=1000  # Maximum number of results to keep in store
QUEUE_FLUSH_INTERVAL=3600  # How often to flush queues (in seconds)

# Face detection settings
FACE_DETECTION_CONFIDENCE=0.4  # Detection confidence threshold (0-1)
FACE_DETECTION_IOU=0.5  # Intersection over Union threshold (0-1)
MIN_FACE_WIDTH=100  # Minimum face width in pixels to consider

# Frame processing
FRAME_SAMPLE_RATE=5  # How many frames per second to process

# Web interface settings
WEB_HOST=0.0.0.0  # Listen on all interfaces
WEB_PORT=5000  # Use port 5000 
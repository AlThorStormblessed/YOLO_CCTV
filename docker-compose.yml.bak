version: "3.8"

services:
  backend:
    build:
      context: ./prod
      dockerfile: Dockerfile.backend
    container_name: yolo-backend
    ports:s
      - "5003:5003"
    volumes:
      - ./runs:/app/runs # Mount YOLO model directory
    environment:
      FLASK_APP: app.py
      FLASK_ENV: production
      MODEL_PATH: /app/runs/detect/train3/weights/best.pt
      CORS_ORIGINS: "https://yolo.viewr.in,http://yolo.viewr.in,http://localhost:5003,https://model.viewr.in,http://model.viewr.in"
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.backend.rule=Host(`model.viewr.in`)"
      - "traefik.http.services.backend.loadbalancer.server.port=5003"

  frontend:
    build:
      context: ./prod/frontend
      dockerfile: Dockerfile.frontend
    container_name: yolo-frontend
    ports:
      - "3000:3000"
    depends_on:
      - backend
    environment:
      # For production use
      NEXT_PUBLIC_SOCKET_PROTOCOL: "http:"
      NEXT_PUBLIC_SOCKET_HOST: "localhost"
      NEXT_PUBLIC_SOCKET_PORT: "5003"
      NEXT_PUBLIC_API_PROTOCOL: "http:"
      NEXT_PUBLIC_API_HOST: "localhost"
      NEXT_PUBLIC_API_PORT: "5003"
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.frontend.rule=Host(`yolo.viewr.in`)"
      - "traefik.http.services.frontend.loadbalancer.server.port=3000"
